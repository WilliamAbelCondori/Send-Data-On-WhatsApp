<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/idScrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:gravity="center"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/idLinearLayoutMainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/im"
                android:layout_margin="24dp"
                />

            <ProgressBar
                android:id="@+id/progresbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

        </RelativeLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/idTextInputLayoutMobileMainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:hint="Enter Whatsapp Number"
        app:boxBackgroundColor="@color/whiteColor"
        app:boxCornerRadiusBottomEnd="0dp"
        app:boxCornerRadiusTopStart="0dp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorPrimary"
        app:startIconDrawable="@drawable/ic_phone_android_black_24dp"
        app:startIconTint="@color/colorPrimary"
        app:helperText="Enter Number without country code"
        app:helperTextTextColor="@android:color/primary_text_light_nodisable"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/idButtonSendImageMainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTextInputLayoutMobileMainActivity"
        android:layout_margin="24dp"
        android:backgroundTint="@color/whiteColor"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="Send Image"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"

        app:cornerRadius="0dp"
        app:icon="@drawable/ic_whatsapp"

        app:iconGravity="start"
        app:iconPadding="0dp"
        app:iconTint="@null"
        app:rippleColor="#1A000000"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/idButtonSendPdfMainActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="@color/whiteColor"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="send pdf"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_whatsapp"

        app:iconGravity="start"
        app:iconPadding="0dp"
        app:iconTint="@null"
        app:rippleColor="#1A000000"

        />
    </LinearLayout>

</ScrollView>